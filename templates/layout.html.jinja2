<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{% endblock %}</title> 
    </head>

    <body>
        {% with messages = get_flashed_messages(with_categories=false) %}
            {% if messages %}
            <header>
                <ul class=flashes>
                {% for message in messages %}
                    <li>{{message}}</li>
                {% endfor %}
                </ul>
            </header>
            {% endif %}
        {% endwith %}


        <main>
            {% block body %}
            {% endblock %}
        </main>
    </body>
</html>